{
  "name": "dsftp",
  "version": "1.0.0",
  "description": "SFTP container manager with TUI/CLI/GUI - Easily create and manage atmoz/sftp Docker containers",
  "author": "",
  "license": "MIT",
  "keywords": ["sftp", "docker", "cli", "tui", "file-transfer"],
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "dsftp": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx cli/index.ts",
    "dev": "tsx cli/index.ts",
    "tui": "tsx cli/index.ts --tui",
    "gui": "cd gui && npm run tauri dev",
    "gui:build": "cd gui && npm run build",
    "portable": "npm run build && npm run gui:build && node scripts/create-portable.js",
    "lint": "eslint cli/ core/",
    "lint:fix": "eslint cli/ core/ --fix",
    "format": "prettier --write \"cli/**/*.ts\" \"core/**/*.ts\"",
    "format:check": "prettier --check \"cli/**/*.ts\" \"core/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist portable"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "clipboardy": "^5.0.0",
    "commander": "^14.0.0",
    "inquirer": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
